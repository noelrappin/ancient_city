!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "FootTravel"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    = stylesheet_link_tag "application", :media => "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"} Time Travel
          .container.nav-collapse
            %ul.nav
              - if user_signed_in?
                %li= link_to "My Profile", current_user
                %li= link_to "Edit Preferences", edit_user_path(current_user)
                %li= link_to "Sign out", destroy_user_session_path
              - else
                %li.sign_in= link_to('Sign In', new_user_session_path)
                %li= link_to('Sign Up', new_user_registration_path)

    .container
      .content
        .row
          .span10
            - if notice.present?
              %p.notice= notice
            - if alert.present?
              %p.alert= alert
            = yield
          .span1 &nbsp;
          .span2
            .well.sidebar-nav
              %h3 Sidebar
              %ul.nav.nav-list
                %li.nav-header Sidebar
                %li= link_to "Link 1", "/path1"
                %li= link_to "Link 2", "/path2"
                %li= link_to "Link 3", "/path3"

      %footer
        %p &copy; Company 2015
    = javascript_include_tag "application"
